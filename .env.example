# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_START_HOUR=10
SCHEDULER_END_HOUR=19
SCHEDULER_INTERVAL_HOURS=3

# Application Configuration
CONFIG_DIR=config
TIMEZONE=UTC
